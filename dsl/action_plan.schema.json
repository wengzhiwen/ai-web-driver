{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ActionPlan",
  "type": "object",
  "required": ["meta", "steps"],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": ["testId", "baseUrl"],
      "additionalProperties": false,
      "properties": {
        "testId": {
          "type": "string",
          "minLength": 1
        },
        "baseUrl": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["t"],
        "properties": {
          "t": {
            "type": "string",
            "enum": ["goto", "click", "fill", "assert"]
          },
          "selector": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "minLength": 1
          },
          "value": {
            "type": "string"
          },
          "kind": {
            "type": "string",
            "enum": [
              "visible",
              "invisible",
              "enabled",
              "disabled",
              "text_contains",
              "text_equals",
              "text_regex",
              "count_equals",
              "count_at_least"
            ]
          }
        },
        "allOf": [
          {
            "if": {
              "properties": {"t": {"const": "goto"}}
            },
            "then": {
              "required": ["url"]
            }
          },
          {
            "if": {
              "properties": {"t": {"enum": ["fill", "click", "assert"]}}
            },
            "then": {
              "required": ["selector"]
            }
          },
          {
            "if": {
              "properties": {"t": {"const": "fill"}}
            },
            "then": {
              "required": ["value"]
            }
          },
          {
            "if": {
              "properties": {"t": {"const": "assert"}}
            },
            "then": {
              "required": ["kind"]
            }
          }
        ]
      }
    }
  }
}
